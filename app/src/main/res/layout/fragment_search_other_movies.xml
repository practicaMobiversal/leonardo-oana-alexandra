<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.movies.movie_drawer.SearchOtherMoviesFragment"
    android:theme="@style/AppTheme"
    android:background="@drawable/gradient">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_movies"
        android:layout_width="350dp"
        android:layout_height="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="@string/search_movies"
        android:background="@drawable/button_theme"
        android:iconifiedByDefault="false">
    </androidx.appcompat.widget.SearchView>

    <Button
        android:id="@+id/filter_btn2"
        android:layout_width="80dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@id/sv_movies"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Filters"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@id/filter_btn2"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_search_other_movies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/view_movie_item">
        </androidx.recyclerview.widget.RecyclerView>

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>